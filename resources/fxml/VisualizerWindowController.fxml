                                          <MenuItem fx:id="setDefaultForeground" mnemonicParsing="false" text="default" />
                                       </items>
                                    </Menu>
                                    <Menu mnemonicParsing="false" text="Opacity">
                                      <items>
                                        <MenuItem mnemonicParsing="false">
