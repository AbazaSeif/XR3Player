<fx:root prefHeight="551.0" prefWidth="1086.0" style="-fx-background-color: #202020;" stylesheets="@../style/application.css" type="StackPane" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <BorderPane>
         <center>
            <GridPane fx:id="centerGridPane" hgap="5.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" BorderPane.alignment="CENTER">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                  <RowConstraints maxHeight="-Infinity" minHeight="8.0" prefHeight="32.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="423.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <BorderPane.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="2.0" />
               </BorderPane.margin>
               <children>
                  <Label fx:id="updatesInformationLabel" alignment="CENTER" maxWidth="1.7976931348623157E308" style="-fx-text-fill: #4FFF49;" styleClass="settingsLabel" text="Updates Information" />
                  <Label fx:id="comingSoonLabel" alignment="CENTER" maxWidth="1.7976931348623157E308" styleClass="settingsLabel" text="On the coming updates" GridPane.columnIndex="1" />
               </children>
            </GridPane>
         </center>
         <top>
            <VBox BorderPane.alignment="CENTER">
               <children>
                  <Label fx:id="topLabel" alignment="CENTER" maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minHeight="-Infinity" prefHeight="46.0" style="-fx-text-fill: white;" styleClass="settingsLabel" text="Current Version :" />
               </children>
            </VBox>
         </top>
         <bottom>
            <StackPane BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="download" mnemonicParsing="false" text="Manual Download" StackPane.alignment="CENTER_RIGHT">
                     <tooltip>
                        <Tooltip text="Download the latest version" />
                     </tooltip>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  <HBox alignment="CENTER" pickOnBounds="false" spacing="5.0">
                     <children>
                        <Button fx:id="automaticUpdate" mnemonicParsing="false" text="Automatic Update">
                           <tooltip>
                              <Tooltip text="Automatic Update Download" />
                           </tooltip>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                           <graphic>
                              <ImageView pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../image/Installing%20Updates-32.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                        <Button fx:id="closeWindow" layoutX="678.0" layoutY="15.0" mnemonicParsing="false" text="Close">
                           <tooltip>
                              <Tooltip text="Close the Window" />
                           </tooltip>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Button>
                     </children>
                     <padding>
                        <Insets bottom="7.0" top="7.0" />
                     </padding>
                  </HBox>
               </children>
               <BorderPane.margin>
                  <Insets right="5.0" />
               </BorderPane.margin>
            </StackPane>
         </bottom>
      </BorderPane>
   </children>
</fx:root>
